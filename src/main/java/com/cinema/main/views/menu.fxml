<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.cinema.main.views.MenuView">
  <menus>
    <Menu fx:id="movies" mnemonicParsing="false" text="Filmes" />
    <Menu fx:id="products" mnemonicParsing="false" text="Produtos" />
    <Menu fx:id="cart" mnemonicParsing="false" text="Carrinho" />
    <Menu fx:id="profile" mnemonicParsing="false" text="Perfil" />
    <Menu mnemonicParsing="false" text="Gerenciamento">
      <items>
        <Menu mnemonicParsing="false" text="Genero dos filmes">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#registerGenre" text="Cadastrar genero" />
            <MenuItem mnemonicParsing="false" onAction="#listGenres" text="Listar generos" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Filmes">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#registerMovie" text="Cadastrar filme" />
            <MenuItem mnemonicParsing="false" onAction="#listMovies" text="Listar filmes" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Salas de cinema">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#registerCinemaHall"
              text="Cadastrar sala de cinema" />
            <MenuItem mnemonicParsing="false" onAction="#listCinemaHalls"
              text="Listar salas de cinema" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Sessoes">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#registerMovieSession"
              text="Cadastrar sessao" />
            <MenuItem mnemonicParsing="false" onAction="#listMovieSession" text="Listar sessoes" />
          </items>
        </Menu>
      </items>
    </Menu>
  </menus>
</MenuBar>